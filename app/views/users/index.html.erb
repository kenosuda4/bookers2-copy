<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerrorが発生しました
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
   </div>
  <div class="row">
     <div class="col-xs-3">
        <%= render 'books/side', book: @book, user: @user %>
     </div>
    <% if flash[:notice] %>
     　<div class="flash">
       　<%= flash[:notice] %>
     　</div>
   <% end %>
    <div class="col-xs-9">
      <h3>Users</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
              <a><%= attachment_image_tag user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %></a>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
              <%= link_to "Show", user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>