<div class="container">
<div class="row">
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
</div>

<div class="col-xs-2"></div>

<%= form_for(@book) do |f| %>
 
  <div class="col-xs-8">
   <h2>Editing Book</h2>
    <h4>title</h4>
    <%= f.text_field :title, class:"form-control" %>
 
    <h4>opinion</4>
    <%= f.text_area :body, 'data-provider': :summernote %>
 
    <%= f.submit "Update Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
   <% end %>
   <%= link_to "Show", book_path, class: "book_#{@book.id}" %>
      | 
   <%= link_to "Back", books_path, class: "back" %>
  </div>
<div class="col-xs-2"></div>