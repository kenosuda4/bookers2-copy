<h2>User info</h2>

<table>
    <tr>
    <th>
    <%= attachment_image_tag user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %>
    </th>
    </tr>
    <tr>
    <th>name</th>
    <td><%= user.name %> </td>
    </tr>
    <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
    </tr>
</table>


<br><br>
<div class="row">
    <%= link_to edit_user_path(current_user), class: "btn btn-default btn-block" do %>
        <span class="glyphicon glyphicon-wrench"></span>
    <% end %>
</div>

<h2>New book</h2>
<%= form_for book do |f| %>
 

   <h4>title</h4>
   <%= f.text_field :title, class:"form-control" %>

   <h4>opinion</4>
   <%= f.text_area :body, 'data-provider': :summernote %>

   <%= f.submit "Create Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>